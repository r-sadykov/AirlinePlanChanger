<Page x:Class="AirlinePlanChanges_MailCenter.View.PassengerReceiptPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="812"
      d:DesignWidth="1374"
      Title="PassengerReceiptPage">

    <Grid>
        <StackPanel Orientation="Vertical">
            <DatePicker Name="DatePicker" Width="250" Height="50" HorizontalAlignment="Left" Margin="10"/>
            <Button Name="LoadMails" Click="LoadMails_OnClick" Width="250" Height="50" HorizontalAlignment="Left" Content="Load Mails" Margin="10"/>
            <Button Name="SaveResults" Click="SaveResults_OnClick" Width="250" Height="50" HorizontalAlignment="Left" Content="Save Results" Margin="10"/>
            <ScrollViewer VerticalScrollBarVisibility="Visible" CanContentScroll="True" Height="550">
                <DataGrid Name="DataGridReceipts" Height="Auto" Margin="10"/>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Page>
